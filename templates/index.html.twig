{% extends "layout.html.twig" %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block content %}
    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">{{ app_name }}</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#team">Tools</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#portfolio">Sites</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">{{ header_title }}</div>
                <div class="intro-heading">Local Sites</div>
                <a href="{{ url('info') }}" class="page-scroll btn btn-xl" target="_blank">System Info</a>
            </div>
        </div>
    </header>

    <!-- Team Section -->
    <section id="team">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Tools</h2>
                </div>
            </div>
            <div class="row">
                {% for tool in devtools %}
                    <div class="col-sm-4">
                        <div class="team-member">
                            <img src="{{ tool.logo }}" class="img-responsive img-circle" alt="">
                            <h4><a href="{{ tool.url }}" target="_blank">{{ tool.name }}</a></h4>
                            <p class="text-muted">{{ tool.desc }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Portfolio Grid Section -->
    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Sites</h2>
                </div>
            </div>
            <div class="row">
                {% for app in apps %}
                    <div class="col-md-4 col-sm-6 portfolio-item">
                        <a href="{{ app.url }}" class="portfolio-link" data-toggle="modal" target="_blank">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="{{ asset(app.img)}}" class="img-responsive" alt="">
                        </a>
                        <div class="portfolio-caption">
                            <h4>{{ app.name }}</h4>
                            <p class="text-muted">{{ app.type }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="copyright">Copyright &copy; rmzamora 2017</span>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
